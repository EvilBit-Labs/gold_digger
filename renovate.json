{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":separateMajorReleases",
    ":combinePatchMinorReleases",
    ":ignoreUnstable",
    ":prImmediately",
    ":updateNotScheduled",
    ":automergeDisabled",
    ":ignoreModulesAndTests",
    ":autodetectPinVersions",
    ":prHourlyLimit2",
    ":prConcurrentLimit10"
  ],
  "timezone": "America/New_York",
  "schedule": ["before 6am on Monday"],
  "labels": ["dependencies"],
  "assignees": ["UncleSp1d3r"],
  "reviewers": ["UncleSp1d3r"],
  "cargo": {
    "enabled": true,
    "rangeStrategy": "bump"
  },
  "packageRules": [
    {
      "description": "Auto-merge Cargo dev-dependencies",
      "matchManagers": ["cargo"],
      "matchDepTypes": ["dev-dependencies"],
      "matchPackageNames": ["cargo-nextest", "cargo-tarpaulin"],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "description": "Auto-merge pre-commit hooks",
      "matchManagers": ["pre-commit"],
      "matchPackageNames": ["pre-commit"],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "description": "Auto-merge GitHub Actions",
      "matchManagers": ["github-actions"],
      "matchPackageNames": [
        "actions/checkout",
        "actions/setup-node",
        "actions/upload-artifact",
        "actions/download-artifact",
        "actions/cache",
        "actions/rust-toolchain",
        "actions-rs/toolchain",
        "actions-rs/audit-check",
        "actions-rs/cargo",
        "actions-rs/clippy-check",
        "actions-rs/tarpaulin",
        "codecov/codecov-action",
        "peaceiris/actions-gh-pages",
        "dawidd6/action-download-artifact",
        "softprops/action-gh-release",
        "taiki-e/install-action",
        "taiki-e/upload-disk-image",
        "taiki-e/upload-rust-binary"
      ],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "description": "Auto-merge justfile dependencies",
      "matchManagers": ["regex"],
      "matchPackageNames": ["just"],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "description": "Group Rust toolchain updates",
      "matchPackageNames": ["rust", "rustc", "cargo"],
      "groupName": "Rust toolchain",
      "schedule": ["before 6am on Monday"]
    },
    {
      "description": "Group GitHub Actions updates",
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "schedule": ["before 6am on Monday"],
      "labels": ["ci"]
    },
    {
      "description": "Require manual review for production dependencies",
      "matchManagers": ["cargo"],
      "matchDepTypes": ["dependencies"],
      "matchPackageNames": ["mysql", "anyhow", "clap", "serde_json", "csv"],
      "automerge": false,
      "reviewersFromCodeOwners": true,
      "addLabels": ["needs-review"]
    },
    {
      "description": "Security updates get high priority",
      "matchPackageNames": ["mysql", "serde_json", "rustls", "webpki-roots"],
      "priority": 20,
      "automerge": false,
      "addLabels": ["security", "high-priority"]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "addLabels": ["security", "vulnerability"]
  },
  "osvVulnerabilityAlerts": true,
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6am on Monday"]
  },
  "prNotPendingHours": 1,
  "stabilityDays": 3
}
