{
  "rules": {
    "style": {
      "noTrailingComma": "off"
    },
    "correctness": {
      "noUnusedVariables": "error"
    }
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf",
    "semicolons": "always",
    "quoteStyle": "single",
    "jsxQuoteStyle": "double",
    "quoteProperties": "as-needed",
    "trailingCommas": "es5",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "avoid"
  }
}
