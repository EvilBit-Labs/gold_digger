{
    "config": {
        "default": true,
        // Line length enforcement: disabled for markdown (MD013: false)
        // Rust uses 119 characters via rustfmt.toml
        "heading-increment": true,
        "ul-style": {
            "style": "consistent"
        },
        "MD007": {
            "indent": 2
        },
        "MD013": false,
        "MD024": {
            "siblings_only": true
        },
        "MD029": false,
        "MD033": {
            "allowed_elements": [
                "span"
            ]
        },
        "MD035": {
            "style": "---"
        },
        "MD046": {
            "style": "fenced"
        },
        "MD048": {
            "style": "backtick"
        },
        "first-line-h1": false,
        "fenced-code-language": true
    },
    "gitignore": true,
    "fix": true,
    "globs": [
        "**/*.md"
    ],
    "ignores": [
        "CHANGELOG.md",
        ".venv/**",
        "**/node_modules/**",
        "**/__pycache__/**",
        "**/*.tpl.md"
    ]
}
