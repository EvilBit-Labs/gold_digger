# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Rust files
[*.rs]
indent_style = space
indent_size = 4
max_line_length = 100

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 119

# Markdown files
[*.md]
trim_trailing_whitespace = false
# Do not enforce line length for markdown files, let the markdown parser handle it
max_line_length = off

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# TOML files
[*.toml]
indent_style = space
indent_size = 4

# XML files
[*.xml]
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2

# PowerShell scripts
[*.ps1]
indent_style = space
indent_size = 4

# Justfile
[justfile]
indent_style = space
indent_size = 4

# Documentation files
[*.{txt,rst}]
trim_trailing_whitespace = false
max_line_length = off
